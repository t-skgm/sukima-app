{
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./node_modules/**)",
      "Read(./dist/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun x gh-setup-hooks@2.0.0",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gitlab@claude-plugins-official": false
  }
}
