	"dependencies": {
		"@orpc/server": "^1.0.0",
		"@sukima/shared": "workspace:*",
		"hono": "^4.7.4",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250121.0",
		"typescript": "^5.7.3",
		"vitest": "^4.0.18"
	}
}
