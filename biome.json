{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"files": {
		"includes": [
			"**/packages/**",
			"!**/node_modules",
			"!**/dist",
			"!**/.wrangler",
			"!**/*.d.ts",
			"!**/*.gen.ts",
			"!**/*.css"
		]
	}
}
