{
	"name": "sukima",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
	"engines": {
		"node": ">=24"
	},
	"pnpm": {
		"executionEnv": {
			"nodeVersion": "24.13.0"
		},
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"sharp",
			"workerd"
		],
		"overrides": {
			"@cloudflare/workers-types": "4.20260123.0"
		}
	},
	"scripts": {
		"dev": "pnpm --filter @sukima/web dev",
		"dev:api": "pnpm --filter @sukima/api dev",
		"build": "pnpm --filter @sukima/shared build && pnpm --filter @sukima/api build && pnpm --filter @sukima/web build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "pnpm -r typecheck",
		"test": "pnpm -r test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"typescript": "^5.9.3",
		"wrangler": "^4.61.0"
	}
}
